#!/bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
WHITE='\033[0;37m'
NC='\033[0m' # no color


current_shell=$(ps -p $(ps -p $$ -o ppid=) -o comm=)



# Get the history for new possible alias



showBashHistory(){
	declare -A counter


	# Extrae los Ãºltimos 100 comandos y guarda solo la primera palabra (el comando real)
	commands=$(tail -n 100 ~/.bash_history | awk '{print $1}')


	# Contador de comandos
	for command in $commands; do
	    ((counter[$command]++))
	done


	# Mostrar resultados ordenados por cantidad
	echo -e "\nðŸ” Most used commands in last 100 entries:\n"

	for command in "${!counter[@]}"; do
		number=${counter[$command]}

		if [[ number -gt 5 ]]
		then
	    		echo "$command: $number" >> most_words.txt
	    	fi
	done

	sort -h -t' ' -k2 most_words.txt | tail -n10
	echo " " > most_words.txt
	rm -f most_words.txt
}


showZshHistory(){
	sed 's/^: [0-9]*:[0-9]*;//' ~/.zsh_history | grep -o -i '\<git\>' | wc -l
}



showAutomatic(){

	current_shell=$(ps -p $(ps -p $$ -o ppid=) -o comm=)

	if [[ "$current_shell" == "zsh" ]];
	then
		echo -e "Using $current_shell history file..."
		showZshHistory
	elif [[ "$current_shell" == "bash" ]]; 
	then
		echo -e "Using $current_shell history file..."
		showBashHistory
	else
		echo -e "Unknown shell. Try using the manual mode "
	fi

}


# Get option history

echo -e "Hi $USER! Â¿From where the script gonna get the history of your commands?"


echo -e "
1. Automatic
2. From ~/.bash_history
3. From ~/.zsh_history (only for zsh users)

'q' or 'Q' to Quit
"

echo -n "Enter option : "
read option


case $option in
	1)
	 showAutomatic
	;;
	2)
	 showBashHistory
	;;
	3)
	 showZshHistory
	;;
	"q" | "Q")
	 echo -e "Exiting..."
	 exit 0
	;;
	*)
	 echo -e "Error, option not recognized"
	 exit 0
	;;
esac

